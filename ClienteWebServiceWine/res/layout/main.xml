<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
 
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="Time New Roman"
        android:text="Bem Vindo !!!"
        android:textStyle="bold"
        tools:context=".ClienteWSWineActivity" />
 
    <Button
        android:id="@+id/btBuscarTodos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:minWidth="120dp"
        android:text="Listar Vinhos" />

    <Button
        android:id="@+id/btMinhaAdega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btBuscarTodos"
        android:layout_below="@+id/btBuscarTodos"
        android:layout_marginTop="14dp"
        android:minWidth="120dp"
        android:text="Minha Adega" />

    <Button
        android:id="@+id/btRanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btMinhaAdega"
        android:layout_below="@+id/btMinhaAdega"
        android:layout_marginTop="14dp"
        android:minWidth="120dp"
        android:text="Ranking" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btRanking"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/cellar" />
 
</RelativeLayout>
